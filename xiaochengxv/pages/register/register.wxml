<view class="register-container">
	<view class="register-card">
		<view class="register-header">
			<text class="register-title">注册账号</text>
			<text class="register-subtitle">加入校园AI资源共享平台</text>
		</view>

		<view class="register-form">
			<view class="input-group">
				<input class="register-input" placeholder="用户名" bindinput="onInputUserName" value="{{userName}}" />
			</view>

			<view class="input-group">
				<input class="register-input" password placeholder="密码" bindinput="onInputPassword" value="{{password}}" />
			</view>

			<view class="input-group">
				<input class="register-input" password placeholder="确认密码" bindinput="onInputConfirmPassword" value="{{confirmPassword}}" />
			</view>

			<view class="input-group">
				<input class="register-input" placeholder="邮箱" bindinput="onInputEmail" value="{{email}}" />
			</view>

			<button class="register-button" bindtap="onRegister" disabled="{{isRegistering}}">
				{{isRegistering ? '注册中...' : '立即注册'}}
			</button>

			<view class="register-links">
				<text class="link-text" bindtap="goToLogin">返回登录</text>
			</view>
		</view>
	</view>
</view>