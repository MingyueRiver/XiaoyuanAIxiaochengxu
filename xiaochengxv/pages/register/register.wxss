/* pages/register/register.wxss */

.register-container {
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 40rpx 20rpx;
	background: #F8FAFC;
	min-height: 100vh;
}

.register-card {
	width: 680rpx;
	background: #fff;
	border-radius: 16rpx;
	padding: 32rpx;
	box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.06);
}

.register-header {
	text-align: center;
	margin-bottom: 20rpx;
}

.register-title {
	font-size: 32rpx;
	color: #111827;
	font-weight: 600;
}

.register-subtitle {
	font-size: 20rpx;
	color: #6B7280;
}

.input-group {
	margin-top: 16rpx;
}

.register-input {
	width: 100%;
	height: 64rpx;
	padding: 12rpx 16rpx;
	border-radius: 8rpx;
	border: 1rpx solid #E6E9EE;
	background: #FAFBFD;
}

.register-button {
	margin-top: 22rpx;
	width: 100%;
	height: 64rpx;
	background: #6366F1;
	color: #fff;
	border-radius: 10rpx;
	font-size: 28rpx;
}

.register-links {
	margin-top: 14rpx;
	text-align: center;
}

.link-text {
	color: #6366F1;
}