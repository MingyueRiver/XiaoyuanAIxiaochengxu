.profile-container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f8f9fa;
}

/* 用户卡片 */
.user-card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

/* 文字头像样式 */
.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background: linear-gradient(135deg, #6366F1, #8B5CF6);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-text {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-email {
  display: block;
  font-size: 26rpx;
  color: #666;
}

/* 用户统计 */
.user-stats {
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 30rpx;
}

.stat-item {
  text-align: center;
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #6366F1;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 菜单区域 */
.menu-section {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.menu-section-title {
  display: block;
  padding: 24rpx 32rpx 16rpx;
  font-size: 24rpx;
  color: #999;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
  width: 60rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  font-size: 36rpx;
  color: #999;
}

.logout-text {
  color: #ef4444;
}

/* 未登录状态 */
.not-logged-in {
  text-align: center;
  padding: 100rpx 40rpx;
}

.not-logged-text {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.login-button {
  background: #6366F1;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 30rpx;
}