.container {
  background: #F8FAFC;
  min-height: 100vh;
}

.form-container {
  padding: 24rpx;
}

/* 表单分组 */
.form-section {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.form-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #334155;
}

.required {
  color: #DC2626;
  margin-left: 4rpx;
}

.char-count {
  font-size: 22rpx;
  color: #94A3B8;
}

/* 输入框样式 */
.common-input,
.common-textarea {
  background: #F8FAFC;
  border: 2rpx solid #E2E8F0;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 28rpx;
  color: #334155;
  width: 100%;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.common-input:focus,
.common-textarea:focus {
  border-color: #6366F1;
  box-shadow: 0 0 0 4rpx rgba(99, 102, 241, 0.1);
}

.input-placeholder {
  color: #94A3B8;
}

.common-textarea {
  resize: none;
  font-family: inherit;
}

/* 选择器 */
.common-picker {
  display: block;
}

.picker-view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #F8FAFC;
  border: 2rpx solid #E2E8F0;
  border-radius: 12rpx;
  padding: 16rpx;
  min-height: 48rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #334155;
}

.picker-icon {
  font-size: 28rpx;
  color: #94A3B8;
}

.date-picker {
  display: block;
}

/* 金额输入 */
.input-group {
  display: flex;
  align-items: center;
  background: #F8FAFC;
  border: 2rpx solid #E2E8F0;
  border-radius: 12rpx;
  padding: 0 12rpx;
  gap: 8rpx;
}

.currency {
  font-size: 28rpx;
  color: #6366F1;
  font-weight: bold;
}

.amount-input {
  flex: 1;
  padding: 16rpx;
  font-size: 28rpx;
  color: #334155;
  border: none;
  background: transparent;
}

.amount-unit {
  font-size: 28rpx;
  color: #64748B;
}

/* 辅助文本 */
.helper-text {
  display: block;
  font-size: 24rpx;
  color: #94A3B8;
  margin-top: 8rpx;
}

/* 紧急度按钮 */
.urgency-buttons {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.urgency-btn {
  flex: 1;
  min-width: 80rpx;
  padding: 16rpx;
  border: 2rpx solid #E2E8F0;
  background: white;
  border-radius: 12rpx;
  color: #64748B;
  font-size: 26rpx;
  transition: all 0.3s ease;
}

.urgency-btn.active {
  border-color: #6366F1;
  background: #E0E7FF;
  color: #6366F1;
  font-weight: 600;
}

.urgency-btn.active.high {
  border-color: #DC2626;
  background: #FEE2E2;
  color: #DC2626;
}

.urgency-btn.active.medium {
  border-color: #EA580C;
  background: #FED7AA;
  color: #EA580C;
}

.urgency-btn.active.low {
  border-color: #6366F1;
  background: #E0E7FF;
  color: #6366F1;
}

/* 提示框 */
.tips-container {
  margin-top: 24rpx;
  gap: 12rpx;
}

.tip-item {
  display: flex;
  gap: 12rpx;
  background: #F0F9FF;
  border-left: 4rpx solid #0369A1;
  border-radius: 12rpx;
  padding: 16rpx;
}

.tip-item.warning {
  background: #FEF3C7;
  border-left-color: #D97706;
}

.tip-icon {
  font-size: 28rpx;
  min-width: 28rpx;
}

.tip-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.tip-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #334155;
}

.tip-text {
  font-size: 22rpx;
  color: #64748B;
  line-height: 1.4;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 12rpx;
  padding: 20rpx;
  background: white;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  padding: 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #6366F1, #8B5CF6);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

.btn-primary:active:not(.disabled) {
  background: linear-gradient(135deg, #5B5CDD, #7C3AED);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(99, 102, 241, 0.2);
}

.btn-primary.disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.btn-secondary {
  background: white;
  color: #334155;
  border: 2rpx solid #E2E8F0;
}

.btn-secondary:active {
  background: #F8FAFC;
  transform: translateY(2rpx);
}
