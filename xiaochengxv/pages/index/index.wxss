.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f8f9fa;
}

/* 状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.location-text, .user-name {
  font-size: 28rpx;
  color: #333;
}

/* 搜索框 */
.search-section {
  margin-bottom: 30rpx;
}

.search-box {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.search-text {
  color: #999;
  font-size: 28rpx;
}

/* 推荐区域 */
.recommendation-section {
  margin-bottom: 40rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.section-desc {
  font-size: 26rpx;
  color: #666;
}

/* 推荐标签 */
.recommend-tags {
  display: flex;
  margin-bottom: 30rpx;
  gap: 20rpx;
}

.tag {
  padding: 16rpx 32rpx;
  background: white;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  border: 1rpx solid #e5e7eb;
}

.tag.active {
  background: #6366F1;
  color: white;
  border-color: #6366F1;
}

/* 推荐卡片 */
.recommend-card {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.card-more {
  font-size: 26rpx;
  color: #6366F1;
}

/* 场地项 */
.venue-item {
  display: flex;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.venue-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.venue-image {
  width: 160rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.venue-info {
  flex: 1;
}

.venue-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.venue-location {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.venue-tags {
  margin-bottom: 12rpx;
}

.venue-tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  background: #f1f5f9;
  border-radius: 6rpx;
  font-size: 22rpx;
  color: #64748b;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

.venue-stats {
  display: flex;
  justify-content: space-between;
}

.venue-rating {
  font-size: 24rpx;
  color: #666;
}

.venue-match {
  font-size: 24rpx;
  font-weight: 500;
}

.venue-match.perfect {
  color: #10b981;
}

.venue-match.excellent {
  color: #3b82f6;
}

.venue-match.good {
  color: #f59e0b;
}

/* 任务项 */
.task-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.task-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.task-main {
  flex: 1;
}

.task-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.task-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.task-meta {
  display: flex;
  gap: 20rpx;
}

.task-reward {
  font-size: 24rpx;
  color: #f59e0b;
  font-weight: bold;
}

.task-location, .task-time {
  font-size: 24rpx;
  color: #666;
}

.task-side {
  text-align: right;
}

.task-urgency {
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  color: white;
}

.task-urgency.high {
  background: #ef4444;
}

.task-urgency.medium {
  background: #f59e0b;
}

.task-urgency.low {
  background: #10b981;
}

/* 资源网格 */
.resource-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.resource-item {
  background: #f8f9fa;
  border-radius: 8rpx;
  overflow: hidden;
}

.resource-cover {
  width: 100%;
  height: 160rpx;
  background: #e2e8f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.resource-info {
  padding: 20rpx;
}

.resource-title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.resource-type {
  display: block;
  font-size: 22rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.resource-price {
  font-size: 24rpx;
  font-weight: bold;
}

.resource-price.free {
  color: #10b981;
}

.resource-price.paid {
  color: #f59e0b;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  background: white;
  border-radius: 12rpx;
  padding: 30rpx 0;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.action-item {
  text-align: center;
}

.action-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
  display: block;
}

.action-item text:last-child {
  display: block;
  font-size: 24rpx;
  color: #333;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 60rpx;
  color: #666;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-action {
  background: #6366F1;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}