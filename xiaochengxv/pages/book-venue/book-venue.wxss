.container {
  background: #F8FAFC;
  min-height: 100vh;
  position: relative;
}

/* 搜索栏 */
.search-container {
  padding: 16rpx 20rpx;
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 10;
}

.search-box {
  display: flex;
  align-items: center;
  background: #F8FAFC;
  border: 2rpx solid #E2E8F0;
  border-radius: 20rpx;
  padding: 12rpx 16rpx;
  gap: 8rpx;
}

.search-icon {
  font-size: 24rpx;
  color: #94A3B8;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #334155;
  border: none;
  background: transparent;
}

.search-placeholder {
  color: #94A3B8;
}

/* 筛选选项 */
.filter-container {
  background: white;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #F1F5F9;
}

.filter-scroll {
  padding: 0 20rpx;
  white-space: nowrap;
}

.filter-group {
  display: flex;
  gap: 12rpx;
}

.filter-btn {
  padding: 8rpx 16rpx;
  background: #F1F5F9;
  color: #64748B;
  border-radius: 16rpx;
  font-size: 24rpx;
  white-space: nowrap;
  transition: all 0.3s ease;
}

.filter-btn.active {
  background: linear-gradient(135deg, #6366F1, #8B5CF6);
  color: white;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  gap: 20rpx;
}

.loading-spinner {
  width: 50rpx;
  height: 50rpx;
  border: 4rpx solid #E2E8F0;
  border-top-color: #6366F1;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  color: #64748B;
  font-size: 28rpx;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 500rpx;
  gap: 16rpx;
}

.empty-icon {
  font-size: 80rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #334155;
  font-weight: bold;
}

.empty-desc {
  font-size: 26rpx;
  color: #94A3B8;
}

/* 场地列表 */
.venues-list {
  padding: 20rpx;
  max-height: calc(100vh - 140rpx);
}

.venue-card {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.venue-card:active {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transform: translateY(-2rpx);
}

.venue-image {
  width: 100%;
  height: 180rpx;
  background: #E2E8F0;
}

.venue-info {
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.venue-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.venue-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #334155;
}

.venue-type {
  background: #E0E7FF;
  color: #6366F1;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.venue-location {
  font-size: 24rpx;
  color: #64748B;
}

.venue-meta {
  display: flex;
  gap: 12rpx;
  font-size: 24rpx;
  color: #64748B;
}

.meta-item {
  flex: 1;
}

.price {
  font-weight: bold;
  color: #6366F1;
  text-align: right;
}

.facilities {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-top: 4rpx;
}

.facility-tag {
  background: #F1F5F9;
  color: #64748B;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
}

.venue-action {
  margin-top: 8rpx;
}

.action-btn {
  background: linear-gradient(135deg, #6366F1, #8B5CF6);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.action-btn:active {
  background: linear-gradient(135deg, #5B5CDD, #7C3AED);
  transform: translateY(2rpx);
}

/* 模态框背景 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0);
  z-index: 99;
  transition: background 0.3s ease;
  pointer-events: none;
}

.modal-overlay.show {
  background: rgba(0, 0, 0, 0.5);
  pointer-events: auto;
}

/* 预约弹窗 */
.booking-modal {
  position: fixed;
  bottom: -100%;
  left: 0;
  width: 100%;
  height: 90vh;
  background: white;
  border-radius: 16rpx 16rpx 0 0;
  z-index: 100;
  display: flex;
  flex-direction: column;
  transition: bottom 0.3s ease;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.booking-modal.show {
  bottom: 0;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #F1F5F9;
  background: white;
}

.modal-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #334155;
}

.close-btn {
  font-size: 32rpx;
  color: #94A3B8;
}

.modal-content {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

/* 预约摘要 */
.booking-summary {
  background: #F0F9FF;
  border-left: 4rpx solid #0369A1;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 20rpx;
}

.summary-label {
  display: block;
  font-size: 24rpx;
  font-weight: 600;
  color: #334155;
  margin-bottom: 8rpx;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #64748B;
  margin-bottom: 4rpx;
}

.summary-item .label {
  color: #334155;
}

.summary-item .value {
  font-weight: 600;
  color: #334155;
}

/* 表单 */
.form-section {
  margin-bottom: 16rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #334155;
  margin-bottom: 8rpx;
}

.picker-view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #F8FAFC;
  border: 2rpx solid #E2E8F0;
  border-radius: 12rpx;
  padding: 16rpx;
  min-height: 48rpx;
}

.picker-text {
  font-size: 26rpx;
  color: #334155;
}

.picker-icon {
  font-size: 28rpx;
  color: #94A3B8;
}

/* 备注文本框 */
.booking-textarea {
  width: 100%;
  padding: 12rpx;
  border: 2rpx solid #E2E8F0;
  border-radius: 12rpx;
  background: #F8FAFC;
  font-size: 26rpx;
  color: #334155;
  min-height: 100rpx;
  box-sizing: border-box;
  font-family: inherit;
}

.input-placeholder {
  color: #94A3B8;
}

/* 费用计算 */
.cost-summary {
  background: #FAFBFC;
  border: 1rpx solid #F1F5F9;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 20rpx;
}

.cost-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #64748B;
  padding: 8rpx 0;
}

.cost-label {
  color: #334155;
}

.cost-value {
  color: #334155;
  font-weight: 500;
}

.cost-divider {
  height: 1rpx;
  background: #F1F5F9;
  margin: 8rpx 0;
}

.cost-row.total {
  padding-top: 12rpx;
}

.cost-value-total {
  font-size: 32rpx;
  font-weight: bold;
  color: #6366F1;
}

/* 提示框 */
.tips-box {
  background: #FEF3C7;
  border-left: 4rpx solid #D97706;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 20rpx;
}

.tips-title {
  display: block;
  font-size: 24rpx;
  font-weight: 600;
  color: #334155;
  margin-bottom: 8rpx;
}

.tips-text {
  display: block;
  font-size: 22rpx;
  color: #64748B;
  line-height: 1.6;
  margin-bottom: 4rpx;
}

/* 底部按钮 */
.modal-footer {
  display: flex;
  gap: 12rpx;
  padding: 16rpx 20rpx 20rpx;
  background: white;
  border-top: 1rpx solid #F1F5F9;
}

.btn-cancel,
.btn-confirm {
  flex: 1;
  padding: 16rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.btn-cancel {
  background: #F1F5F9;
  color: #334155;
}

.btn-cancel:active {
  background: #E2E8F0;
  transform: translateY(2rpx);
}

.btn-confirm {
  background: linear-gradient(135deg, #6366F1, #8B5CF6);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

.btn-confirm:active:not(.disabled) {
  background: linear-gradient(135deg, #5B5CDD, #7C3AED);
  transform: translateY(2rpx);
}

.btn-confirm.disabled {
  opacity: 0.6;
  cursor: not-allowed;
}
