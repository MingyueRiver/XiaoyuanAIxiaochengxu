/* 全局样式 - 修复：适配全局导航栏高度（全局导航栏默认约 90rpx，调整内边距） */
.resource-center-page {
  min-height: 100vh;
  background-color: #F8FAFC;
  padding-bottom: 90rpx; /* 全局导航栏高度，避免内容被遮挡 */
}

/* 顶部搜索栏 + 筛选区 */
.header-container {
  padding: 20rpx;
  background-color: white;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  background-color: #F5F7FA;
  border-radius: 24rpx;
  padding: 16rpx 24rpx;
  margin-bottom: 20rpx;
}

.search-icon {
  font-size: 24rpx;
  color: #94A3B8;
  margin-right: 12rpx;
}

.search-text {
  font-size: 24rpx;
  color: #94A3B8;
  flex: 1;
}

/* 筛选栏容器 */
.filter-container {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

/* 筛选滚动容器 */
.type-filter-scroll, .status-filter-scroll {
  display: flex;
  gap: 12rpx;
  padding-bottom: 8rpx;
  white-space: nowrap; /* 修复：横向滚动不换行 */
}

/* 筛选项 */
.filter-item {
  padding: 12rpx 24rpx;
  background-color: #F5F7FA;
  border-radius: 18rpx;
  white-space: nowrap;
  transition: all 0.3s;
}

.filter-item.active {
  background-color: #6366F1;
}

.filter-item.active .filter-text {
  color: white;
  font-weight: 500;
}

.filter-text {
  font-size: 24rpx;
  color: #334155;
}

/* 操作栏（排序 + 布局切换） */
.operation-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 8rpx;
}

.sort-group {
  display: flex;
  gap: 20rpx;
}

.sort-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background-color: #F5F7FA;
  border-radius: 16rpx;
}

.sort-icon {
  font-size: 20rpx;
  color: #6366F1;
}

.sort-text {
  font-size: 22rpx;
  color: #334155;
}

.layout-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background-color: #6366F1;
  color: white;
  border-radius: 16rpx;
}

.layout-icon {
  font-size: 20rpx;
}

.layout-text {
  font-size: 22rpx;
}

/* 资源展示区 */
.resource-content {
  padding: 20rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-icon {
  font-size: 60rpx;
  color: #6366F1;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 24rpx;
  color: #94A3B8;
}

/* 网格布局 */
.grid-layout {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.resource-card {
  width: calc(50% - 10rpx);
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.3s;
}

.resource-card:hover {
  transform: translateY(-4rpx);
}

/* 卡片封面 */
.card-cover {
  position: relative;
  width: 100%;
  height: 200rpx;
}

.card-cover image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 标签样式（新增：修复标签不显示问题） */
.tag {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  color: white;
  font-weight: 500;
}

.free-tag {
  background-color: #10B981; /* 免费绿色 */
}

.paid-tag {
  background-color: #F59E0B; /* 付费橙色 */
}

.tag-text {
  font-size: 20rpx;
}

/* 卡片信息 */
.card-info {
  padding: 16rpx;
}

.card-title {
  font-size: 26rpx;
  color: #334155;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card-desc {
  font-size: 20rpx;
  color: #94A3B8;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card-meta {
  font-size: 18rpx;
  color: #94A3B8;
  margin-bottom: 8rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.meta-separator {
  color: #CBD5E1;
  margin: 0 4rpx;
}

.card-time {
  font-size: 18rpx;
  color: #94A3B8;
}

/* 列表布局 */
.list-layout {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.resource-item {
  display: flex;
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.3s;
}

.resource-item:hover {
  transform: translateY(-4rpx);
}

/* 列表项封面 */
.item-cover {
  position: relative;
  width: 200rpx;
  height: 140rpx;
  flex-shrink: 0;
}

.item-cover image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 列表项信息 */
.item-info {
  flex: 1;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item-title {
  font-size: 26rpx;
  color: #334155;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-desc {
  font-size: 20rpx;
  color: #94A3B8;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-meta {
  display: flex;
  justify-content: space-between;
  font-size: 18rpx;
  color: #94A3B8;
}

.meta-left, .meta-right {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

/* 无数据提示 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  color: #94A3B8;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 26rpx;
  color: #334155;
  margin-bottom: 8rpx;
}

.empty-subtext {
  font-size: 22rpx;
  color: #94A3B8;
}

